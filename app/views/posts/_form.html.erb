<%= simple_form_for(@post) do |form| %>
  <div>
    <%= form.label "Tell me your thoughts..." %><br>
    <%= form.text_field :tweet %>
    <% @post.errors.full_messages_for(:tweet).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>